<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="420dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_gravity="center"
    android:background="@drawable/popup_report"
    android:elevation="20dp">

    <TextView
        android:id="@+id/closebtn_text"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:textColor="@color/red"
        android:layout_marginTop="5dp"
        android:layout_marginStart="280dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/close_btn"/>



    <ImageView
        android:id="@+id/fit_or_sick_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/healthy"
        android:elevation="8dp"
        android:layout_gravity="center_horizontal"
        >

    </ImageView>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desc"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/greyishblack"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

    </TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/searchforbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/yellowtheme"
        android:text="SEARCH MEDICAL STORES"
        android:textColor="@color/white"
        android:visibility="invisible"
        >

    </com.google.android.material.button.MaterialButton>



</LinearLayout>