<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DhanSarthi.DhanSarthiHomePage"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dhan_sarthi"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07"
        android:textColor="@color/colorPrimaryDark"/>


    <ImageView
        android:id="@+id/dhansarthithemeimgview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:src="@mipmap/dhansarthithemeimage"/>


    <Spinner
        android:id="@+id/business_sector_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dhansarthithemeimgview"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/spinner_border"
        android:elevation="10dp"
        />

    <Spinner
        android:id="@+id/business_stage_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business_sector_spinner"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:elevation="10dp"
        android:background="@drawable/spinner_border"/>

    <Spinner
        android:id="@+id/business_state_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business_stage_spinner"
        android:background="@drawable/spinner_border"
        app:layout_constraintVertical_bias="0.14"
        android:layout_marginStart="30dp"
        android:elevation="10dp"
        android:layout_marginEnd="30dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/goahead_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business_state_spinner"
        app:layout_constraintVertical_bias="0.4"
        android:elevation="10dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/go_ahead"
        android:drawableEnd="@drawable/ic_forward_arrow"
        app:cornerRadius="15dp"
        android:clickable="false"
        />



</androidx.constraintlayout.widget.ConstraintLayout>